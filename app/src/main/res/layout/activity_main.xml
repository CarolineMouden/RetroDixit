<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.retrodixit.DixitViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <include layout="@layout/view_start" app:vm="@{vm}" />

        <include layout="@layout/view_cards" app:vm="@{vm}" />

        <include layout="@layout/view_selected" app:vm="@{vm}" />

        <include layout="@layout/view_preview" app:vm="@{vm}" />

    </RelativeLayout>
</layout>